# Vorld Arena Arcade Configuration
# Copy this file to .env and fill in your values
# Get these from https://vorld.app after creating your Arena Arcade game

# Your Vorld App ID (from Step 1: Create Vorld Auth App)
VORLD_APP_ID=your_app_id_here

# Your Arena Game ID (from Step 4: Create Arena Game)
ARENA_GAME_ID=your_arena_game_id_here

# Vorld Arena Arcade API endpoints (from official docs)
ARENA_SERVER_URL=wss://airdrop-arcade.onrender.com
GAME_API_URL=https://airdrop-arcade.onrender.com/api

# JWT Token for authentication (you'll get this from Vorld Auth)
USER_TOKEN=your_jwt_token_here

# Stream URL (e.g., https://twitch.tv/your_channel)
STREAM_URL=https://twitch.tv/your_channel

# Server configuration
PORT=3000
GODOT_WEBSOCKET_PORT=9080

